# Application Configuration
APP_NAME=Threat Intelligence Platform
APP_VERSION=2.0.0
ENVIRONMENT=production

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=threat_intel
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password_change_me

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=threat-intel-data

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=threat-intel

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GCP_PROJECT_ID=your-project-id
GCP_BUCKET_NAME=threat-intel-bucket

# Threat Intelligence Feeds
VIRUSTOTAL_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
SHODAN_API_KEY=your-shodan-api-key
ALIENVAULT_API_KEY=your-alienvault-api-key

# SIEM Integration
SPLUNK_HOST=your-splunk-host
SPLUNK_TOKEN=your-splunk-token
QRADAR_HOST=your-qradar-host
QRADAR_TOKEN=your-qradar-token

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL=security-team@company.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/threat-intel/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ML Model Configuration
MODEL_PATH=/app/models
MODEL_UPDATE_INTERVAL=86400  # 24 hours in seconds
ANOMALY_THRESHOLD=0.75
CLASSIFICATION_CONFIDENCE=0.85

# Feature Flags
ENABLE_AUTO_BLOCKING=true
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_ML_DETECTION=true
ENABLE_THREAT_FEEDS=true
